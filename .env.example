# ======================================
# Meeting Assistant Environment Config
# ======================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git!

# Server Configuration
PORT=8080
HOST=0.0.0.0
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000
SHUTDOWN_TIMEOUT=10

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=meeting_assistant
DB_SSLMODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=https://api-meeting.infoquang.id.vn/v1/auth/google/callback

# JWT Configuration
JWT_ACCESS_SECRET=your-access-secret-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Storage Configuration (MinIO or S3)
STORAGE_TYPE=minio
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=meeting-assistant
STORAGE_USE_SSL=false

# LiveKit (for future use)
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_URL=ws://localhost:7880

# OpenAI (for future use)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# Rate Limiting (for future use)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Logging (for future use)
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS
CORS_ALLOWED_ORIGINS=https://api-meeting.infoquang.id.vn,http://localhost:3000,http://localhost:5173

# Frontend URL
FRONTEND_URL=https://api-meeting.infoquang.id.vn
