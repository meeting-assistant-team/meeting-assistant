# ======================================
# Production Environment Config
# ======================================
# This file is for REFERENCE ONLY
# Actual production values are in GitHub Secrets

# Server Configuration
PORT=8080
HOST=0.0.0.0
ENVIRONMENT=production
ALLOWED_ORIGINS=https://api-meeting.infoquang.id.vn
SHUTDOWN_TIMEOUT=10

# Database (managed by docker-compose.prod.yml)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=<FROM_GITHUB_SECRET>
DB_NAME=meeting_assistant
DB_SSLMODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# Redis (managed by docker-compose.prod.yml)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=<FROM_GITHUB_SECRET>
REDIS_DB=0

# JWT Configuration
JWT_ACCESS_SECRET=<FROM_GITHUB_SECRET>
JWT_REFRESH_SECRET=<FROM_GITHUB_SECRET>
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Google OAuth2
GOOGLE_CLIENT_ID=<FROM_GITHUB_SECRET>
GOOGLE_CLIENT_SECRET=<FROM_GITHUB_SECRET>
GOOGLE_REDIRECT_URL=https://api-meeting.infoquang.id.vn/v1/auth/google/callback

# LiveKit
LIVEKIT_API_KEY=<FROM_GITHUB_SECRET>
LIVEKIT_API_SECRET=<FROM_GITHUB_SECRET>
LIVEKIT_URL=wss://your-livekit-domain.com

# OpenAI
OPENAI_API_KEY=<FROM_GITHUB_SECRET>
OPENAI_MODEL=gpt-4

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=<FROM_GITHUB_SECRET>
MINIO_SECRET_KEY=<FROM_GITHUB_SECRET>
MINIO_BUCKET_NAME=meeting-recordings
MINIO_USE_SSL=false

# CORS
CORS_ALLOWED_ORIGINS=https://api-meeting.infoquang.id.vn,https://your-frontend-domain.com

# Frontend URL (for redirects)
FRONTEND_URL=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
